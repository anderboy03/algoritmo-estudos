Algoritmo "semnome"

Var
  N : caractere


Inicio
   escreva("digite seu nome ")
   leia(N)
   escreval("total de letras do seu nome : ",compr(N))
   escreval("seu noe em maiusculo e ", maiusc(N))
   escreval("seu nome em minusculo e ",minusc(N))
   escreval("A letra seu nome e  ", copia(N,2,3))


Fimalgoritmo